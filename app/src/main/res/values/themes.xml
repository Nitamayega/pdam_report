<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PDAMReport" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/funblue</item>
        <item name="colorPrimaryVariant">@color/palegold</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryVariant">@color/palecerulean</item>
    </style>

    <style name="Theme.PDAMReport" parent="Base.Theme.PDAMReport" />

